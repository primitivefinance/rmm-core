{
  "name": "@primitivefinance/v2-core",
  "version": "1.0.0",
  "description": "Primitive V2 core smart contracts",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/primitivefinance/primitive-v2-core.git"
  },
  "author": "Primitive",
  "license": "GPL-3.0-or-later",
  "homepage": "https://primitive.finance",
  "keywords": [
    "primitive",
    "v2",
    "ethereum"
  ],
  "files": [
    "contracts",
    "artifacts/contracts/PrimitiveEngine.sol/PrimitiveEngine.json",
    "artifacts/contracts/PrimitiveFactory.sol/PrimitiveFactory.json",
    "artifacts/contracts/interfaces/**/*.json",
    "!artifacts/contracts/interfaces/**/*.dbg.json",
    "typechain"
  ],
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "test": "npx mocha --require hardhat/register --recursive --parallel --exit --extension ts --timeout 100000000",
    "test:engine": "npx mocha ./test/unit/primitiveEngine/**/*.ts --require hardhat/register --recursive --parallel --exit --extension ts --timeout 100000000",
    "test:factory": "npx mocha ./test/unit/primitiveFactory/**/*.ts --require hardhat/register --recursive --parallel --exit --extension ts --timeout 100000000",
    "test:libraries": "npx mocha ./test/unit/libraries/*.ts --require hardhat/register --recursive --parallel --exit --extension ts --timeout 100000000",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@primitivefinance/v2-math": "1.3.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.2.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.4.0",
    "chai": "^4.3.4",
    "defender-relay-client": "^1.10.0",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.1",
    "hardhat": "^2.4.3",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.6",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^5.1.2",
    "typescript": "^4.2.3",
    "web3-units": "1.1.2"
  },
  "postinstall": "typechain",
  "lint-staged": {
    "*.{js,ts,sol,md}": "prettier --write"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "mocha": "^9.0.3"
  }
}
